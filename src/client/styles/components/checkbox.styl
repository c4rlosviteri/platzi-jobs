.checkbox
  justify-self start

  > label
    align-items center
    display flex

.checkbox__input
  border 0
  height 1.25rem
  opacity 0
  position absolute
  width 1.25rem

  &:hover
    cursor pointer

.checkbox__fake-input
  border-radius 2px
  border 1px solid var(--mediumgray)
  display inline-grid
  padding 2px
  height 1.25rem
  width 1.25rem

.checkbox__container
  background-color var(--white)
  position relative

  & .checkbox__input:focus + .checkbox__fake-input
    box-shadow 0 0 0 2px var(--pinkfocus)

  & .checkbox__input:checked + .checkbox__fake-input .checkbox__svg
    opacity 1
    transform scale(1)

.checkbox__svg
  opacity 0
  transition transform 0.1s ease-in 25ms
  transform scale(0)
  transform-origin bottom left

.checkbox__label
  @extends $label
  margin-left 0.375rem
